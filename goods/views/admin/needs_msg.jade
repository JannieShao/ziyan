.needs_msg
    .needs_msg_select_div
        span 所在学校：
        input.select_needs_no(type="text")
        span 状态：
        select
            option 请选择
            option 在架
            option 已下架
            option 已售
        span 更新时间：
        input.Wdate.date-input(name="date_selected", type="text",value="", onclick="WdatePicker()")
        button 查询

    table
        tr.table_titles
            td.needs_msg_no 编号
            td.needs_msg_title 主题
            td.needs_msg_intro 简介
            td.needs_msg_sum 数量
            td.needs_msg_time 发布时间
            td.needs_msg_school 所在学校
            td.needs_msg_needer 需求者
            td.needs_msg_status 状态
            td.needs_msg_action 操作
        - var v = ["name","price","user","school"]
        - var goods_msg = {0:{"name":"急求c++课本","user":"aaa"},1:{"name":"需笔记本散热架一个","user":"eee"},2:{"name":"管理学-原理与方法","user":"bbb"},3:{"name":"数字图像处理课本","user":"aaa"}}
        - for(var x = 4;x<18;x++)goods_msg[x]= {"name":"画图工具","user":"aaa"}
        - for(var i=0;i<18;i++)
            tr
                td #{i+3}
                td
                    a(href="#") #{goods_msg[i].name}
                td 无
                td 1
                td 2014-5-27 18:#{i*2+15}:#{i*2+4}
                td 陕西科技大学
                td #{goods_msg[i].user}
                td 
                    -if(i<3)
                        |待审核
                    - else
                        |发布中  
                td 
                    -if(i<3)
                        button.button_err 审核
                    - else
                        button 强制删除
