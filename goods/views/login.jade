append main
    .content
        .login
            form(role="form", method="post", action="/login")
                h2 登录
                input.form-control(type="text", placeholder="用户名", required, autofocus)
                input.form-control(type="password", placeholder="密码", required)
                button.btn.btn-lg.btn-primary.btn-block.login_btn(type="reset") 重置
                button.btn.btn-lg.btn-primary.btn-block.login_btn(type="submit") 登录
