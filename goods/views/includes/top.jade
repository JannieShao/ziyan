-  var  img_path = "/images"


doctype html
html(lang="zh-cn")
    head
        meta(charset="utf-8")
        meta(name="description", content="校易通二手物品交易平台")
        meta(name="author", content="ziyan")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="robots", content="noindex, nofollow")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title 校易通二手物品交易平台
        link(rel="stylesheet", href="/stylesheets/main.css",type="text/css")

        //-link(rel="stylesheet", href="/vendor/bootstrap/css/bootstrap.css")
        //if lt IE 9
            script(src="http://cdn.bootcss.com/html5shiv/3.7.0/html5shiv.min.js")
            script(src="http://cdn.bootcss.com/respond.js/1.3.0/respond.min.js")

        script(type="text/javascript", src="/vendor/jquery/jquery-2.1.0.min.js")
        script(src="/vendor/bootstrap/js/bootstrap.min.js",type="text/javascript")
        script(type="text/javascript", src="/javascripts/main.js")
        block head
    body
        .top
            .top_show
                - if(log)
                    ul.top_user.clearfix
                        li #{user.name}
                        li
                            a(href = "#") 消息
                - else
                    ul.top_user.clearfix
                        li 亲，请
                            a(href = "/login") 登录
                        li 
                            a(href = "/register") 免费注册
                .top_right
                    .car_div
                        a(href="#")
                            span.car_text 购物车 
                            span.car 0  
                        span.kfc |   
                            a(href="#") 客户服务
        .top_search
            .top_show
                img.log(src="#{img_path}/log.png")
                .search_bar
                    input.search_text(name="search", type="text", maxlength="12", required, autofocus )
                    .search_a
                        .search_a_show
                            a(href="#") 搜索
        .top_menu
            .top_show
                ul.clearfix
                    li.all_softs                         
                        a(href="#") 全部分类
                        .soft_show_all
                            .top_show
                                .softs 
                                    #books.clearfix 
                                        .softs_span 
                                            i.icon-book
                                            span 书 籍
                                    #shuma.clearfix
                                        .softs_span
                                            i.icon-camera-retro
                                            span 数 码
                                    #computer.clearfix
                                        .softs_span
                                            i.icon-desktop
                                            span 电脑及周边
                                    #cards.clearfix
                                        .softs_span
                                            i.icon-credit-card
                                            span 卡/票/证
                                    #plays.clearfix
                                        .softs_span
                                            i.icon-dashboard
                                            span 休闲娱乐
                                    #decoration.clearfix
                                        .softs_span
                                            i.icon-github-alt
                                            span 饰品/手表
                                    #shoes.clearfix
                                        .softs_span
                                            i.icon-suitcase
                                            span 鞋 包
                                    #clothes.clearfix
                                        .softs_span 服 装
                                    #sports.clearfix
                                        .softs_span 体育用品
                                    #girls.clearfix
                                        .softs_span 女生专区
                                    #boys.clearfix
                                        .softs_span 男生专区

                    li
                        a(href="/index") 首页
                    li 
                        a(href="#") 帮助
        

        block main
