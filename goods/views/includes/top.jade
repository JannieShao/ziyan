
- var  img_path = "/images"
- var tag = ["top_books","top_shuma","top_computer","top_cards","top_plays","top_decoration","top_shoes","top_clothes","top_sports","top_girls","top_boys","top_boys"]
- var tag2 = ["book_all","shuma_all","computer_all","cards_all","plays_all","decoration_all","shoes_all","clothes_all","sports_all","girls_all","boys_all","boys_all"]
- var icons = ["icon-book","icon-camera-retro","icon-desktop","icon-credit-card","icon-dashboard","icon-github-alt","icon-suitcase","glyph-icon-sweater","glyph-icon-table-tennis","glyph-icon-girl","glyph-icon-old-man","icon-globe",]
- var goods_img = ["baobao.jpg","computer.jpg","pingban.jpg","tel.jpg","zuqiu.jpg","001.jpg"]
- var goods_name = ["单肩包","笔记本","平板电脑","手机","足球"]

doctype html
html(lang="zh-cn")
    head
        meta(charset="utf-8")
        meta(name="description", content="校易通二手物品交易平台")
        meta(name="author", content="ziyan")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="robots", content="noindex, nofollow")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title 校易通二手物品交易平台
        link(rel="stylesheet", href="/stylesheets/main.css",type="text/css")
        link(rel="stylesheet", href="/vendor/font-awesome/css/font-awesome.min.css",type="text/css")
        link(rel="stylesheet", href="/vendor/glyphicons/css/glyphicons.css",type="text/css")

        //-link(rel="stylesheet", href="/vendor/bootstrap/css/bootstrap.css")
        //if lt IE 9
            script(src="http://cdn.bootcss.com/html5shiv/3.7.0/html5shiv.min.js")
            script(src="http://cdn.bootcss.com/respond.js/1.3.0/respond.min.js")

        script(type="text/javascript", src="/vendor/jquery/jquery-2.1.0.min.js")
        script(src="/vendor/bootstrap/js/bootstrap.min.js",type="text/javascript")
        script(type="text/javascript", src="/javascripts/main.js")
        block head
    body
        .top
            .top_show
                input.login_err(value="#{login_err}")
                - if(if_log)
                    ul.top_user.clearfix
                        li #{user.nick}
                        li
                            a(href = "/user") 【个人中心】
                        li
                            a(href = "#") 【消息
                                - if(user.new_msg_total)
                                    span.msg_num (#{user.new_msg_total})
                                |】
                        li
                            a.logout(href = "#") 退出
                - else
                    ul.top_user.clearfix
                        li 亲，请
                            a(href = "/login") 登录
                        li 
                            a(href = "/register") 免费注册
                .top_right
                    .car_div
                        a(href="#")
                            span.car_text 购物车
                            - if(if_log) 
                                span.car #{user.car_total}
                            - else
                                span.car 0
                        span.kfc |   
                            a(href="#") 客户服务
        .top_search
            .top_show
                img.log(src="#{img_path}/log.png")
                .search_bar
                    input.search_text(name="search", type="text", maxlength="12", required)
                    .search_a
                        .search_a_show
                            a(href="#") 搜索
        .top_menu
            .top_show
                ul.clearfix
                    li.top_all_softs.clearfix                         
                        span 全部分类
                        .top_soft_show_all
                            .top_softs
                                - var i = 0
                                - for(var item_a in sorts) 
                                    div(id="#{tag[i]}").clearfix 
                                        i(class="#{icons[i]}").soft_left_icon
                                        span #{item_a}
                                        i.soft_right_icon.icon-caret-right
                                        - if(sorts[item_a] !== 0) 
                                            div(class="#{tag2[i]}").clearfix
                                                - i++
                                                - for(var item_b in sorts[item_a])
                                                    .sorts_b
                                                        .sorts_b_title
                                                            span #{item_b}
                                                        - if(sorts[item_a][item_b] !== 0)
                                                            - for(var item_c in sorts[item_a][item_b])
                                                                .sorts_c
                                                                    .sorts_c_title
                                                                        span #{item_c}
                                                                    - if(sorts[item_a][item_b][item_c] !== 0)
                                                                        - for(var item_d in sorts[item_a][item_b][item_c])
                                                                            .sorts_d_title
                                                                                span #{item_d}
                                                                //.draw_line                                                 
                    li
                        a(href="/index") 首页
                    li 
                        a(href="#") 帮助
        

        block main

