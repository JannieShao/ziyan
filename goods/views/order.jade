extends ./includes/top
append main
    .content
        .main.clearfix
            .order
                .order_title
                    h2 订单详情
                .order_msg
                    table
                        tr
                            td 物品编号
                            td 物品名称
                            td 缩略图
                            td 单价
                            td 数量
                        tr
                            td 28
                            td 台式电脑
                            td
                                img(src="#{img_path}/goods/computer1.jpg")
                            td
                                span ￥1190.00
                            td 1
                    .order_total.clearfix
                        p 总价：￥1190.00
                .order_addr
                    .order_addr_title
                        h3 收件人信息
                    -var addr = [{name:"张三",tel:"18710831111"},{name:"李四",tel:"18710831112"},{name:"王五",tel:"18710831113"},{name:"赵六",tel:"18710831114"}]
                    - for(var i=0;i<4;i++)
                        .order_addr_main
                            input(type="radio",name="order_addr")
                            .order_addr_name
                                span #{addr[i].name}
                            .order_addr_addr
                                span 陕西省西安市陕西科技大学
                            .order_addr_tel
                                span #{addr[i].tel}
                    .order_addr_add
                        a(href="#") 添加收件人信息
                .order_action
                    button 提交订单
                    button 取消


//-------------------------------------------------------------------------------------
append head
    link(rel="stylesheet", href="/stylesheets/order.css",type="text/css")